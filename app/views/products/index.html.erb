<h1>Food</h1>

  <% if user_signed_in? %>
    <h1>My Products</h1>
      <%= link_to 'My Items', user_products_path(current_user) %>
  <% else %>
    <h1>Products Available on Markibles</h1>
    <%= link_to 'All Items', products_path %>
  <% end %>
<hr/>

<ul class="pricing-table">
  <h5>
    <% @products.each do |product| %>
    Product <%= link_to "#{product.name}", product_path(product) %><br/><br/>
    <%= image_tag product.image_url.to_s %><br/>
    <%= product.description %><br/>
    <%= product.price %><br/>
    <%= product.user.email %><br><hr>
    <% end %>
  </h5>
</ul>

  <br/><br/>

