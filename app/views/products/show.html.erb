<br/><br/><br/>

<p>
  <%= link_to "New Ratings", new_product_rating_path(@product) %>
</p>
<!--[:new, @ratable, :rating]-->



<h5> Artisan:
  <%= @product.user.first_name %><br/>
  <%= @product.user.last_name %><br/>
  <%= @product.user.email %><br/>
  <%= link_to "Contact me", new_product_message_path(@product) %>
</h5>
<div class="large-7 columns">
  <h3><br/>
    <%= @product.name %><br/><br/>
    <%= image_tag @product.image_url.to_s %><br/>
    <%= @product.description %><br/>
    <%= @product.price %><br/>
  </h3>
</div>

<div class="large-8 columns">
  <h4>
  Overall Rating: <%= @product.average_overall %><br/>
  Overall Flavor:<%= @product.average_flavor %><br/>
  Overall Presentation:<%= @product.average_presentation %></br>
</h4>
</div>

<div class="large-5 columns">
  <h5>
  <% @ratings.each do |rating| %><hr/>
    Overall Rating: <%= rating.overall_rating %><br/>
    Overall Flavor: <%= rating.flavor %><br/>
    Overall Presentation: <%= rating.presentation %></br>
    Additional Comments: <%= rating.additional_comments %><br/>
    <% end %>
  </h5><br/>
</div>




<br/>
  <% if current_user.id == @product.user.id %>
  <%= link_to "Delete information", product_path(@product), data: { confirm: "Are you sure?" }, method: :delete %>
<% end %>



